{
  "name": "@finografic/macos-layouts",
  "type": "module",
  "version": "0.6.0",
  "packageManager": "pnpm@10.8.0",
  "description": "Trigger perfect window layouts in macOS",
  "homepage": "https://github.com/finografic/macos-layouts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finografic/macos-layouts.git"
  },
  "bugs": {
    "url": "https://github.com/finografic/macos-layouts/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": {
    "name": "Justin Rankin",
    "email": "justin.blair.rankin@gmail.com",
    "url": "https://github.com/finografic"
  },
  "license": "MIT",
  "keywords": [
    "finografic",
    "macos-layouts",
    "genx:type:cli",
    "cli"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  },
  "bin": {
    "layouts": "./dist/cli.mjs"
  },
  "scripts": {
    "------------------": "---------------------------------------------------",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "link": "pnpm build && pnpm link --global",
    "unlink": "pnpm unlink --global",
    "·········· TESTING": "···················································",
    "test": "vitest",
    "test.run": "vitest run",
    "test.coverage": "vitest run --coverage",
    "·········· LINTING": "···················································",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "·········· FORMATTING": "··················································",
    "format": "dprint fmt --diff",
    "format.check": "dprint check",
    "·········· PUBLISH.GITHUB": "············································",
    "release.github.patch": "pnpm run release.check && pnpm version patch && git push --follow-tags",
    "release.github.minor": "pnpm run release.check && pnpm version minor && git push --follow-tags",
    "release.github.major": "pnpm run release.check && pnpm version major && git push --follow-tags",
    "release.check": "pnpm format.check && pnpm lint.fix && pnpm typecheck && pnpm test.run",
    "release.publish": "pnpm publish --registry https://npm.pkg.github.com",
    "·········· REGISTRIES": "··············································",
    "view.registry.github": "pnpm view @finografic/macos-layouts --registry=https://npm.pkg.github.com",
    "·········· PACKAGES": "··················································",
    "update.eslint-config": "pnpm update @finografic/eslint-config --latest",
    "update.dprint-config": "pnpm update @finografic/dprint-config --latest",
    "upgrade.deps.all": "pnpm update --latest",
    "·········· SETUP": "·····················································",
    "setup:hammerspoon": "bash scripts/install-hammerspoon.sh",
    "·········· UTILS": "·····················································",
    "tsc.debug": "tsc --pretty --project tsconfig.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "·········· HOOKS": "·····················································",
    "prepack": "pnpm build",
    "prepare": "simple-git-hooks",
    "dev.cli": "NODE_ENV=development tsx src/cli.ts --"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@standard-schema/spec": "^1.1.0",
    "execa": "^9.6.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@finografic/dprint-config": "^0.12.4",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "dprint": "^0.51.1",
    "eslint": "9.39.2",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "dprint fmt --allow-no-files",
      "eslint --fix"
    ],
    "*.{json,jsonc,md,yml,yaml,toml}": [
      "dprint fmt --allow-no-files"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --allow-empty"
  }
}
