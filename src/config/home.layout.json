{
  "$schema": "https://finografic.github.io/macos-layout/schema/v0.1.json",
  "version": "0.1",
  "name": "home",
  "description": "Home desk: Mac Studio + 2Ã— 4K (LG HDR 4K primary, LG Ultra HD secondary)",

  "displayRoles": {
    "primary": {
      "match": { "kind": "primary" }
    },
    "secondary": {
      "match": { "kind": "externalByIndex", "index": 0 },
      "fallback": "primary"
    }
  },

  "windows": [
    {
      "id": "cursor-main",
      "app": { "bundleId": "com.todesktop.230313mzl4w4u92", "name": "Cursor" },
      "match": { "kind": "byIndex", "index": 0 },
      "place": {
        "display": "primary",
        "rect": { "x": 0, "y": 0, "w": 0.5, "h": 1 }
      },
      "required": true
    },
    {
      "id": "cursor-secondary",
      "app": { "bundleId": "com.todesktop.230313mzl4w4u92", "name": "Cursor" },
      "match": { "kind": "byIndex", "index": 1 },
      "place": {
        "display": "primary",
        "rect": { "x": 0.5, "y": 0, "w": 0.5, "h": 1 }
      }
    },
    {
      "id": "ghostty-main",
      "app": { "bundleId": "com.mitchellh.ghostty", "name": "Ghostty" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "primary",
        "rect": { "x": 0.5, "y": 0, "w": 0.5, "h": 0.5 }
      }
    },
    {
      "id": "chrome-main",
      "app": { "bundleId": "com.google.Chrome", "name": "Google Chrome" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "secondary",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    },
    {
      "id": "obsidian",
      "app": { "bundleId": "md.obsidian", "name": "Obsidian" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "secondary",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    },
    {
      "id": "claude",
      "app": { "bundleId": "com.anthropic.claudefordesktop", "name": "Claude" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "secondary",
        "rect": { "x": 0.5, "y": 0, "w": 0.5, "h": 1 }
      }
    }
  ],

  "options": {
    "allowOverlap": true,
    "restoreMinimized": false,
    "focusAfterApply": "cursor-main"
  }
}
