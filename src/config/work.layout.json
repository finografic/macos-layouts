{
  "$schema": "https://finografic.github.io/macos-layout/schema/v0.1.json",
  "version": "0.1",
  "name": "work",
  "description": "Work desk: MacBook Pro + external monitor (laptop builtin + primary external)",

  "displayRoles": {
    "builtin": {
      "match": { "kind": "builtin" }
    },
    "primary": {
      "match": { "kind": "primary" },
      "fallback": "builtin"
    },
    "secondary": {
      "match": { "kind": "externalByIndex", "index": 0 },
      "fallback": "primary"
    }
  },

  "windows": [
    {
      "id": "cursor-main",
      "app": { "bundleId": "com.todesktop.230313mzl4w4u92", "name": "Cursor" },
      "match": { "kind": "byIndex", "index": 0 },
      "place": {
        "display": "primary",
        "rect": { "x": 0, "y": 0, "w": 0.62, "h": 1 }
      },
      "required": true
    },
    {
      "id": "cursor-secondary",
      "app": { "bundleId": "com.todesktop.230313mzl4w4u92", "name": "Cursor" },
      "match": { "kind": "byIndex", "index": 1 },
      "place": {
        "display": "secondary",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    },
    {
      "id": "ghostty-main",
      "app": { "bundleId": "com.mitchellh.ghostty", "name": "Ghostty" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "primary",
        "rect": { "x": 0.62, "y": 0, "w": 0.38, "h": 1 }
      },
      "required": true
    },
    {
      "id": "chrome-main",
      "app": { "bundleId": "com.google.Chrome", "name": "Google Chrome" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "secondary",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    },
    {
      "id": "claude",
      "app": { "bundleId": "com.anthropic.claudefordesktop", "name": "Claude" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "builtin",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    },
    {
      "id": "slack",
      "app": { "bundleId": "com.tinyspeck.slackmacgap", "name": "Slack" },
      "match": { "kind": "mainWindow" },
      "place": {
        "display": "builtin",
        "rect": { "x": 0, "y": 0, "w": 1, "h": 1 }
      }
    }
  ],

  "options": {
    "allowOverlap": false,
    "restoreMinimized": false,
    "focusAfterApply": "cursor-main"
  }
}
